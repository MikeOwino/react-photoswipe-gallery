{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["DOM", "ES5", "ES2015.Collection", "ES2015.Iterable", "ES2015.Promise", "es2017.object"],
    "rootDirs": ["src", "stories"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__", "src/storybook", "**/*.stories.ts", "**/*.stories.tsx"]
}
