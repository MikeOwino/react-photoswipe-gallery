{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "noEmit": true
  },
  "include": ["src/**/*"]
}
